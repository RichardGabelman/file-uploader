generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text // MediumText may be needed for MySql
  expiresAt DateTime
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  files    File[]
}

model File {
  id         Int      @id @default(autoincrement())
  name       String
  size       Float
  uploadTime DateTime
  author     User     @relation(fields: [authorId], references: [id])
  authorId   Int
}
